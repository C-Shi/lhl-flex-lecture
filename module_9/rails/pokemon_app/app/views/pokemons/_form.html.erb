<%= form_with(model: pokemon) do |form| %>
  <% if pokemon.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pokemon.errors.count, "error") %> prohibited this pokemon from being saved:</h2>

      <ul>
        <% pokemon.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.label :id, "Pokemon Index:" %>
    <%= form.text_field :id %>

    <%= form.label :name, "Pokemon Name:" %>
    <%= form.text_field :name %>

    <%= form.label :weight, "Pokemon Weight" %>
    <%= form.number_field :weight %>

    <%= form.label :avatar, "Pokemon Avatar Link" %>
    <%= form.text_field :avatar %>

    <img src="">
    <%= form.submit %>
  </div>

<% end %>

<script>
  const url = document.querySelector("[name='pokemon[avatar]']")
  url.addEventListener('input', function(e) {
    document.querySelector('img').setAttribute('src', url.value)
  })
</script>
